<div class="flex flex-col place-items-center border rounded p-3 ">
    <h1 class="flex text-xl font-semibold mb-7 justify-center">Porductos en el carrito:</h1>

    {{#each cart.products}}
    <div class="flex flex-col items-center border rounded w-64 h-24">
        <h3 class="font-medium">Producto: {{this.id.title}}</h3>
        <p class="font-medium">Descripcion: {{this.id.description}}</p>
        <p class="font-medium">Precio: {{this.id.price}}</p>
        <P class="font-medium">Cantidad: {{this.quantity}}</P>
    </div><br>
    {{/each}}
</div>