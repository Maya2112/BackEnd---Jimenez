{{> header}}

<div class="flex flex-col">
    <h3 class="flex text-xl font-semibold mb-7 justify-center">Lista de Productos:</h3>
    <input type="text" value="{{user.cart}}" hidden id="cart">
    <ul class="flex flex-wrap gap-5">
        {{#each productos}}
            <li class="flex border-2 rounded shadow-lg p-3 items-center justify-center"><p class="border rounded bg-teal-800 p-2 font-medium text-base"> -id: {{_id}} <br> -Title: {{title}}<br> -Description: {{description}}<br> -Price: {{price}}<br> -Code: {{code}}<br> -Stock: {{stock}}<br> -Category:
            {{category}}<br> -Status: {{status}}<br><br></p> <br><br> <button class="opacity-50 hover:opacity-100" onClick="addToCart('{{_id}}, {{title}}')"><i class="fa-solid fa-cart-arrow-down fa-2xl"></i></img></button></li>
        {{/each}}
    </ul>
    <br><br>
</div>